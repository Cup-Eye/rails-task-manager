<h1>All my Tasks</h1>

<ul>
<% @tasks.each do |t| %>
  <li> <%= link_to t.title, task_path(t) %>
  <% if t.completed %>
   <p> "done!" </p>
   <% else %>
      <p> "keep working!" </p>
  <% end %>
  <%= link_to "Delete", task_path(t),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
<% end %>
</ul>



<%= link_to 'Create new task', ('tasks/new') %>

